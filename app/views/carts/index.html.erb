<h1>Listing carts</h1>

<table>

  <tr>
  	<th>Cart_ID</th>
    <th>Total_price</th>
    <th>Actions</th>
  </tr>

<% @carts.each do |cart| %>
  <tr> 	
  	<td align="center"><%= cart.id %></td> 
  	<td align="center"><%= number_to_currency(cart.total_price)%></td>  	  		
  	<td>
        <%= link_to 'Show', cart %><br/>
        <%= link_to 'Edit', edit_cart_path(cart) %><br/>
        <%= link_to 'Destroy', cart, 
                    :confirm => 'Are you sure?',
                    :method => :delete %></br>    
    </td>
  </tr>
<% end %>

</table>

<br />

<%= link_to 'New Cart', new_cart_path %>
